<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.smartphonehelper">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartphoneHelper"
        tools:targetApi="31">
        <activity
            android:name=".YoutubeShareActivity"
            android:exported="false"
            android:parentActivityName=".YoutubeMenuActivity"/>
        <activity
            android:name=".YoutubeMenuActivity"
            android:exported="false"
            android:parentActivityName=".YoutubeMainActivity" />
        <activity
            android:name=".YoutubeMainActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Gallery2Activity"
            android:exported="false" />
        <activity
            android:name=".GalleryActivity"
            android:exported="false" />
        <activity
            android:name=".VC_OnThePhoneCallActivity"
            android:exported="false"
            android:parentActivityName=".CallActivity" />
        <activity
            android:name=".VC_MakingCallActivity"
            android:exported="false"
            android:parentActivityName=".CallActivity" />
        <activity
            android:name=".C_OnThePhoneCallActivity"
            android:exported="false"
            android:parentActivityName=".CallActivity" />
        <activity
            android:name=".C_MakingCallActivity"
            android:exported="false"
            android:parentActivityName=".CallActivity" />
        <activity
            android:name=".CallActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MessageActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CameraActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TTSActivity"
            android:exported="true"
            android:permission="android.permission.BIND_IMS_SERVICE">
            <intent-filter>
                <action android:name="android.intent.action.TTS_SERVICE" />
            </intent-filter>
        </activity>
    </application>

</manifest>