<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/oneOnOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="202dp"
        android:text="1:1 대화"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/groupChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="그룹 채팅"
        app:layout_constraintStart_toStartOf="@+id/oneOnOne"
        app:layout_constraintTop_toBottomOf="@+id/oneOnOne" />

    <Button
        android:id="@+id/groupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="단체 문자"
        app:layout_constraintStart_toStartOf="@+id/groupChat"
        app:layout_constraintTop_toBottomOf="@+id/groupChat" />
</androidx.constraintlayout.widget.ConstraintLayout>