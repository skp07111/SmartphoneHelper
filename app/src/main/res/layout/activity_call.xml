<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onthephone"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <ImageView
        android:id="@+id/keypadview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/keypad" />


    <Button
        android:id="@+id/video_call"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="#00FF0000"
        android:outlineProvider="none"
        app:layout_constraintBaseline_toBaselineOf="@+id/icon_call"
        app:layout_constraintEnd_toStartOf="@+id/icon_call"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/icon_call"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="779dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#00FF0000"
        android:outlineProvider="none"
        app:layout_constraintBottom_toTopOf="@+id/btn_recent_call"
        app:layout_constraintEnd_toStartOf="@+id/icon_back"
        app:layout_constraintStart_toEndOf="@+id/video_call"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/icon_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="810dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#00FF0000"
        android:outlineProvider="none"
        app:layout_constraintBottom_toTopOf="@+id/btn_phone_book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon_call"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_recent_call"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="218dp"

        android:layout_marginEnd="61dp"
        android:layout_marginBottom="46dp"
        android:backgroundTint="#00FF0000"
        android:outlineProvider="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_phone_book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_call"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_phone_book"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="82dp"

        android:layout_marginBottom="46dp"
        android:backgroundTint="#00FF0000"
        android:outlineProvider="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_recent_call"
        app:layout_constraintTop_toBottomOf="@+id/icon_back"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>